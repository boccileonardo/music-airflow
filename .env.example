# LastFM credentials
api_key=
shared_secret=
# Start date for DAGs
DAG_START_DATE=2025-12-25
# Airflow UI credentials
AIRFLOW_UI_USER=admin
AIRFLOW_UI_PASSWORD=

# YouTube Data API OAuth
# Get client credentials from Google Cloud Console
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=
# These are obtained after running OAuth flow from Streamlit UI
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_REFRESH_TOKEN=

# Spotify API credentials
# Get credentials from Spotify Developer Dashboard: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# These are obtained after running OAuth flow from Streamlit UI (needed for playlist creation)
SPOTIFY_ACCESS_TOKEN=
SPOTIFY_REFRESH_TOKEN=

# GCP Configuration
# Project ID (required for Firestore and GCS)
GOOGLE_CLOUD_PROJECT=
# Google Cloud Storage for Delta tables (bronze/silver layers)
GCS_BUCKET_URI=gs://your-bucket-name/data
# Firestore database ID for gold layer (defaults to project default database if not set)
FIRESTORE_DATABASE_ID=
# Service account credentials (optional if using ADC via `gcloud auth application-default login`)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
